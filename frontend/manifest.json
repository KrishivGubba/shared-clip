{
    "name": "Hello Extensions",
    "description": "Base Level Extension",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
      "default_popup": "frontpage.html",
      "default_icon": "clip.webp"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js":[
                "content_scripts.js"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "clipboardRead",
        "clipboardWrite",
        "scripting",
        "storage",
        "cookies",
        "tabs"
    ],
    "background":{
        "service_worker":"background.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["join_network.html", "new_network.html"],
            "matches": ["<all_urls>"]
        }
    ]
  }